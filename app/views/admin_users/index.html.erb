<% @page_title = "Admin Users" %>

<%= link_to("<< Back to Admin Menu", access_menu_path, :class => "back-link") %>
<h2>Admin Users</h2>
<%= link_to("Create Admin User", new_admin_user_path) %>
<table>
    <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Username</th>
            <th>Email</th>
            <th class="center">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @admin_users.each do |admin_user| %>
        <tr>
            <td><%= admin_user.last_name %></td>
            <td><%= admin_user.first_name %></td>
            <td><%= admin_user.username %></td>
            <td><%= mail_to(admin_user.email) %></td>
            <td><%= link_to("Edit", edit_admin_user_path(admin_user), :class => "action edit") %>
                <%= link_to("Delete", delete_admin_user_path(admin_user), :class => "action delete") %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>