<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="pages index">
<h2>pages</h2>

<%= link_to("Add New page", new_page_path, :class => 'action new') %>

<table class="listing" summary="page list">
  <tr class="header">
    <th>Subject</th>
    <th>#</th>
    <th>Page</th>
    <th>Visible</th>
    <th>Permalink</th>
    <th>Actions</th>
  </tr>

  <% @pages.each do |page| %>
    <tr>
    <td><%= page.subject.name %>
	  <td><%= page.position %></td>
	  <td><%= page.name %></td>
	  <td class="center"><%= page.visible ? 'Yes' : 'No' %></td>
	  <td class="center"><%= page.permalink %></td>
	  <td class="actions">
	    <%= link_to("Show", page_path(page), :class => 'action show') %>
	    <%= link_to("Edit", edit_page_path(page), :class => 'action edit') %>
	    <%= link_to("Delete", delete_page_path(page), :class => 'action delete') %>
	  </td>
	</tr>
    <% end %>
  </table>

</div>
