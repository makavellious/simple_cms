<%= link_to("<< Back to List", pages_path, :class => 'back-link') %>

<div class="pages edit">
  <h2>Edit Page</h2>


	<%= form_for(@page) do |f| %>

	<table summary="page form field">
	<tr>
	  <th>Name</th>
	    <td><%= f.text_field(:name) %></td>
	    </tr>
	  <tr>
	    <th>Position</th>
	      <td><%= f.text_field(:position) %></td>
	    </th>
	  </tr>
	   <tr>
	    <th>Link Name</th>
	      <td><%= f.text_field(:permalink) %></td>
	    </th>
	  </tr>
	  <tr>
	    <th>Visible?</th>
	    <td><%= f.text_field(:visible) %></td>
	  </tr>
	   <tr>
	    <th>Subject Id</th>
	      <td><%= f.text_field(:subject_id) %></td>
	    </th>
	  </tr>

	  <tr><td><%= f.submit("Update Page") %></td></tr>
	</table>
	<% end %>

</div>