<%= link_to("<< Back to List", sections_path, :class => 'back-link') %>

<div class="sections show">
	<h2>Show Page</h2>


	<table summary="section detail view">
	  <tr>
	    <th>Page Name</th>
	    <td><%= @section.page.name %></td>
	  </tr>
		<tr>
		  <th>Section Name</th>
		  <td><%= @section.name %></td>
		</tr>
		<tr>
		  <th>Position</th>
		  <td><%= @section.position %></td>
		</tr>
		<tr>
		  <th>Visible?</th>
		  <td><%= @section.visible ? "Yes" : "No" %></td>
		</tr> 
		<tr>
		  <th>Content Type</th>
		  <td><%= @section.content_type %></td>
		</tr>
		<tr>
		  <th>Content</th>
		  <td><%= @section.content %></td>
		</tr> 
		<tr>
		  <th>Created At</th>
		  <td><%= @section.created_at %></td>
		</tr>
		<tr>
		  <th>Last Updated</th>
		  <td><%= @section.updated_at %></td>
		</tr>
	</table>
</div>