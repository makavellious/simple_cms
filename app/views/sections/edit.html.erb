<%= link_to("<< Back to List", sections_path, :class => 'back-link') %>

<div class="sections edit">
  <h2>Edit Section</h2>


	<%= form_for(@section) do |f| %>

	<table summary="section form field">
	<th>Page Id</th>
	      <td><%= f.text_field(:page_id) %></td>
	    </th>
	</tr>
	<tr>
	  <th>Name</th>
	    <td><%= f.text_field(:name) %></td>
	    </tr>
	  <tr>
	    <th>Position</th>
	      <td><%= f.text_field(:position) %></td>
	    </th>
	  </tr>
	   <tr>
	    <th>Content Type</th>
	      <td><%= f.text_field(:content_type) %></td>
	    </th>
	  </tr>
	  <tr>
	    <th>Visible?</th>
	    <td><%= f.text_field(:visible) %></td>
	  </tr>
	  <tr>
	    <th>Content</th>
	      <td><%= f.text_area(:content, :cols => 33, :rows => 8) %></td>
	    </th>
	  </tr>
	  

	  <tr><td><%= f.submit("Update Section") %></td></tr>
	</table>
	<% end %>

</div>