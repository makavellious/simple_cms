<div class="sections index">
<h2>Sections</h2>

<%= link_to("Add New section", new_section_path, :class => 'action new') %>

<table class="listing tablesorter" summary="section list" id="myTable">
  <thead>
  <tr class="header">
    <th>Page</th>
    <th>#</th>
    <th>Name</th>
    <th>Visible</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @sections.each do |section| %>
    <tr>
    <td><%= section.page.name %>
	  <td><%= section.position %></td>
	  <td><%= section.name %></td>
	  <td class="center"><%= status_tag(section.visible) %></td>
	  <td class="actions">
	    <%= link_to("Show", section_path(section), :class => 'action show') %>
	    <%= link_to("Edit", edit_section_path(section), :class => 'action edit') %>
	    <%= link_to("Delete", delete_section_path(section), :class => 'action delete') %>
	  </td>
	</tr>
    <% end %>
    </tbody>
  </table>
  
  <%= will_paginate @sections %>
</div>
